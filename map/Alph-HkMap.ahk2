class ExtAlphHk extends GlyphHk {
    static AddTable(&table) {
		ExtAlphHk.AddGlyph(&table, "richard", "{U+13381}", "𓎁", "Egyptian Hieroglyph V015")
    }
}

GreekAlphHk().Main((t) => GreekAlphHk.AddTable(&t))
ExtAlphHk().Main((t) => ExtAlphHk.AddTable(&t))

